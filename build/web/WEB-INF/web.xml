<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Connexion_Utilisateur_Systeme</servlet-name>
        <servlet-class>Servlet.Connexion_Utilisateur_Systeme</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Consultation_Films</servlet-name>
        <servlet-class>Servlet.Consultation_Films</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Location_Films</servlet-name>
        <servlet-class>Servlet.Location_Films</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ajoutRetrait_Film</servlet-name>
        <servlet-class>Servlet.ajoutRetrait_Film</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Restriction</servlet-name>
        <servlet-class>Servlet.Restriction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Deconnexion_Utilisateur_Systeme</servlet-name>
        <servlet-class>Servlet.Deconnexion_Utilisateur_Systeme</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Connexion_Utilisateur_Systeme</servlet-name>
        <url-pattern>/Connexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Consultation_Films</servlet-name>
        <url-pattern>/Consultation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Location_Films</servlet-name>
        <url-pattern>/Location_Films</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ajoutRetrait_Film</servlet-name>
        <url-pattern>/ajoutRetrait_Film</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Restriction</servlet-name>
        <url-pattern>/Restriction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Deconnexion_Utilisateur_Systeme</servlet-name>
        <url-pattern>/Deconnexion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
